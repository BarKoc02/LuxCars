@model LuxCars.Models.Car

<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<body>
    @if (User.Identity.IsAuthenticated && User.IsInRole("admin"))
    {
        <h2>Delete Car</h2>
        <div>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">Name</dt>
                <dd class="col-sm-10">@Model.Name</dd>

                <dt class="col-sm-2">Engine</dt>
                <dd class="col-sm-10">@Model.Engine</dd>

                <dt class="col-sm-2">Color</dt>
                <dd class="col-sm-10">@Model.Color</dd>

                <dt class="col-sm-2">Price per day</dt>
                <dd class="col-sm-10">@Model.Price_per_day zł</dd>
            </dl>
        </div>

        <h4>Are you sure you want to delete this car?</h4>
        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </form>
    }
    else
    {
        <h1 style="color: red">Access denied</h1>
    }
</body>
</html>